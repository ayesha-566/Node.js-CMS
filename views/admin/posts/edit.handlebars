<h1 style="padding:10px ;">Edit Post</h1>

<form action="/admin/posts/edit/{{post.title}}?_method=PUT" method="post" enctype="multipart/form-data">
<div class="form-group" style="padding:10px ;">
    <label for="title">Title</label>
    <input name="title" type="text" class="form-control" value="{{post.title}}">
    </div>

<div class="form-group" style="padding:10px ;">
    <label for="file">Select image</label>
    <input name="file" type="file" class="form-control" required>
    </div>

    <div class="form-group" style="padding:10px ;">
        <label for="category">Select category</label>
    <select name="category" class="form-control">
       {{#each categories}}
        <option value="{{id}}">{{name}}</option>
    {{/each}}
        
    </select>
   </div>

    <div class="form-group" style="padding:10px ;">
    <select name="status" id="status" class="form-control">
          {{#select post.status }} 
        <option>Public</option>
        <option>Private</option>
        <option>Draft</option>
        {{/select}}
    </select>
   </div>
 
<div class="form-group" style="padding:10px ;">
    <label for="allowComments">Allow</label>
    <input name="allowComments"type="checkbox" {{#if post.allowComments}} checked="checked" {{/if}} class="form-control" id="allowComments" placeholder="Allow Comments">
    </div>

    <div class="form-group" style="padding:10px ;">
    <label for="body">Description</label>
    <textarea name="body" rows="20" cols="20" type="checkbox" class="form-control" id="body" >{{post.body}}</textarea>
    </div>


 
    <div class="form-group" style="padding:10px ;">
    <button type="submit">Submit</button>
</div>



</form>